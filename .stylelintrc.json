{
  "extends": [
    "stylelint-config-recess-order",
    "stylelint-prettier/recommended",
    "stylelint-config-recommended-scss"
  ],
  "plugins": ["stylelint-prettier"],
  "rules": {
    "prettier/prettier": [
      true,
      {
        "singleQuote": true
      }
    ],
    "selector-class-pattern": [
      "^[a-z][a-zA-Z0-9]+$",
      {
        "message": "Expected lowerCamelCase naming convention for class."
      }
    ]
  }
}
